<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="900.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.upe.ui.controller.TreinoViewController">

   <children>
      <AnchorPane maxHeight="-1.0" maxWidth="-1.0"
                  prefHeight="-1.0" prefWidth="-1.0"
                  style="-fx-background-color: #2C2C2C;">
         <children>
            <VBox alignment="TOP_CENTER"
                  prefHeight="700.0" prefWidth="900.0"
                  AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">

               <children>
                  <HBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="200.0">
                     <children>
                        <ImageView fitHeight="99.0" fitWidth="104.0" pickOnBounds="true"
                                   preserveRatio="true" scaleX="1.1" scaleY="1.1">
                           <image>
                              <Image url="@../images/dumbbells.png" />
                           </image>
                           <HBox.margin>
                              <Insets right="120.0" top="50.0" />
                           </HBox.margin>
                        </ImageView>

                        <ImageView fx:id="ITreino" fitHeight="95.0" fitWidth="104.0"
                                   pickOnBounds="true" preserveRatio="true" scaleX="1.3" scaleY="1.3">
                           <image>
                              <Image url="@../images/imagesMenu/Design%20sem%20nome%20(4)%201.png" />
                           </image>
                           <HBox.margin>
                              <Insets right="120.0" top="50.0" />
                           </HBox.margin>
                        </ImageView>

                        <ImageView fx:id="IFechar" fitHeight="100.0" fitWidth="104.0"
                                   pickOnBounds="true" preserveRatio="true" scaleX="1.1" scaleY="1.1"
                                   onMouseClicked="#fecharTela">
                           <image>
                              <Image url="@../images/imagesMenu/Design%20sem%20nome%20(6)%201.png" />
                           </image>
                           <HBox.margin>
                              <Insets top="50.0" />
                           </HBox.margin>
                        </ImageView>
                     </children>
                  </HBox>

                  <Button fx:id="BListarTR"
                          alignment="CENTER"
                          contentDisplay="CENTER"
                          mnemonicParsing="false"
                          scaleX="1.5" scaleY="1.5"
                          style="-fx-background-color: #1E1E1E;"
                          text="Listar meus planos de treino"
                          textFill="#e5a000"
                          onAction="#listarPlanosDeTreino">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>

                  <Button fx:id="BEditarTR"
                          alignment="CENTER"
                          contentDisplay="CENTER"
                          mnemonicParsing="false"
                          scaleX="1.5" scaleY="1.5"
                          style="-fx-background-color: #1E1E1E;"
                          text="Editar plano de treino"
                          textFill="#e5a000"
                          onAction="#editarPlanoDeTreino">
                     <VBox.margin>
                        <Insets top="35.0" />
                     </VBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>

                  <Button fx:id="BDeletarTR"
                          alignment="CENTER"
                          contentDisplay="CENTER"
                          mnemonicParsing="false"
                          scaleX="1.5" scaleY="1.5"
                          style="-fx-background-color: #1E1E1E;"
                          text="Deletar plano de treino"
                          textFill="#e5a000"
                          onAction="#deletarPlanoDeTreino">
                     <VBox.margin>
                        <Insets top="35.0" />
                     </VBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>

                  <Button fx:id="BAdicionarTR"
                          alignment="CENTER"
                          contentDisplay="CENTER"
                          mnemonicParsing="false"
                          scaleX="1.5" scaleY="1.5"
                          style="-fx-background-color: #1E1E1E;"
                          text="Adicionar plano de treino"
                          textFill="#e5a000"
                          onAction="#adicionarPlanoDeTreino">
                     <VBox.margin>
                        <Insets top="35.0" />
                     </VBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>

                  <Button fx:id="BRemoverTR"
                          alignment="CENTER"
                          contentDisplay="CENTER"
                          mnemonicParsing="false"
                          scaleX="1.5" scaleY="1.5"
                          style="-fx-background-color: #1E1E1E;"
                          text="Remover plano de treino"
                          textFill="#e5a000"
                          onAction="#removerPlanoDeTreino">
                     <VBox.margin>
                        <Insets top="35.0" />
                     </VBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>

                  <Button fx:id="BDetalhesTR"
                          alignment="CENTER"
                          contentDisplay="CENTER"
                          mnemonicParsing="false"
                          scaleX="1.5" scaleY="1.5"
                          style="-fx-background-color: #1E1E1E;"
                          text="Ver detalhes"
                          textFill="#e5a000"
                          onAction="#verDetalhesTreino">
                     <VBox.margin>
                        <Insets top="35.0" />
                     </VBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</VBox>
