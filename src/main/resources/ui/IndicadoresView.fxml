<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="600.0" minWidth="800.0" prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #2c2c2c;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.controller.IndicadoresViewController">
   <left>
      <VBox minWidth="250.0" prefWidth="320.0" spacing="10" style="-fx-background-color: #1a1a1a; -fx-padding: 20;">
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fitHeight="80.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@images/coracao.png" />
            </ImageView>
            <Text fill="#9c27b0" strokeType="OUTSIDE" strokeWidth="0.0" text="Indicadores">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
         </HBox>
         
         <Separator>
            <VBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
         </Separator>
         
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="10">
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/ferramenta-lapis.png" />
               </ImageView>
               <Button fx:id="BCadastrarIN" maxWidth="Infinity" mnemonicParsing="false" onAction="#cadastrarNovoIndicador" prefHeight="40.0" style="-fx-background-color: #1E1E1E;" text="Cadastrar indicador" textFill="#e5a000" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/ver.png" />
               </ImageView>
               <Button fx:id="BListarIN" maxWidth="Infinity" mnemonicParsing="false" onAction="#listarMeusIndicadores" prefHeight="40.0" style="-fx-background-color: #1E1E1E;" text="Ver indicadores" textFill="#e5a000" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            
            <Region VBox.vgrow="ALWAYS" />
            
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <Button fx:id="sairB" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleSair" onMouseClicked="#voltar" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: #978e8e; -fx-border-radius: 8; -fx-background-radius: 8;" text="Voltar" textFill="#978e8e">
                  <graphic>
                     <ImageView fx:id="IFechar" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@images/sair.png" />
                     </ImageView>
                  </graphic>
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Button>
            </HBox>
         </VBox>
      </VBox>
   </left>
</BorderPane>
