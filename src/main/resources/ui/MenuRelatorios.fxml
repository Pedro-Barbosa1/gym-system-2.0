<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane minHeight="600.0" minWidth="800.0" prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #2C2C2C;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.controller.MenuRelatoriosController">
   <left>
      <VBox minWidth="250.0" prefWidth="320.0" style="-fx-background-color: #1a1a1a;" BorderPane.alignment="CENTER">
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <ImageView fitHeight="80.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@images/salvar.png" />
            </ImageView>
            <Text fill="#9c27b0" strokeType="OUTSIDE" strokeWidth="0.0" text="Relatórios">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
            <padding>
               <Insets left="10.0" />
            </padding>
         </HBox>
         <Separator prefWidth="200.0">
            <VBox.margin>
               <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
         </Separator>
         <VBox spacing="10.0">
            <HBox spacing="10.0">
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/calendario.png" />
               </ImageView>
               <Button fx:id="exportarRelatorioB" maxWidth="Infinity" mnemonicParsing="false" prefHeight="40.0" style="-fx-background-color: #1E1E1E;" text="Exportar Relatório Por Data" textFill="#e5a000" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            <HBox spacing="10.0">
               <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/calendario-diferenca.png" />
               </ImageView>
               <Button fx:id="exportarRelatorioDeDiferencaB" maxWidth="Infinity" mnemonicParsing="false" prefHeight="40.0" style="-fx-background-color: #1E1E1E;" text="Exportar Relatório De Diferença" textFill="#e5a000" HBox.hgrow="ALWAYS">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
         </VBox>
         <Region VBox.vgrow="ALWAYS" />
         <HBox alignment="CENTER">
            <Button fx:id="sairB" mnemonicParsing="false" onAction="#handleSair" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="80.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <Image url="@images/sair.png" />
                  </ImageView>
               </graphic>
            </Button>
            <padding>
               <Insets bottom="20.0" />
            </padding>
         </HBox>
      </VBox>
   </left>
</BorderPane>
