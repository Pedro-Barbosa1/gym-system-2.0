<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #2C2C2C;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.upe.controller.MenuPlanoTreinosController">
   <left>
      <VBox prefWidth="320.0" style="-fx-background-color: #2C2C2C;" BorderPane.alignment="CENTER">
         <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20;">
            <ImageView fitHeight="80.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@images/halter_pequeno.png" />
            </ImageView>
            <Text fill="#9c27b0" strokeType="OUTSIDE" strokeWidth="0.0" text="Plano de Treinos">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Text>
         </HBox>
         <Separator />
         
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <padding>
               <Insets top="60" left="8" right="8" />
            </padding>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
               <ImageView fitHeight="50.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/ver.png" />
               </ImageView>
               <Button fx:id="ListarPlanoB" mnemonicParsing="false" prefHeight="40.0" maxWidth="Infinity" HBox.hgrow="ALWAYS" style="-fx-background-color: #1E1E1E;" text="Listar Meus Planos de Treino" textFill="#e5a000">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
               <ImageView fitHeight="50.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/ferramenta-lapis.png" />
               </ImageView>
               <Button fx:id="criarPlanoB" mnemonicParsing="false" prefHeight="40.0" maxWidth="Infinity" HBox.hgrow="ALWAYS" style="-fx-background-color: #1E1E1E;" text="Criar Novo Plano de Treino" textFill="#e5a000">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
               <ImageView fitHeight="50.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/excluir.png" />
               </ImageView>
               <Button fx:id="deletarPlanoB" mnemonicParsing="false" prefHeight="40.0" maxWidth="Infinity" HBox.hgrow="ALWAYS" style="-fx-background-color: #1E1E1E;" text="Deletar Plano de Treino" textFill="#e5a000">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
               <ImageView fitHeight="50.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/ver.png" />
               </ImageView>
               <Button fx:id="verDetalhesDePlanoB" mnemonicParsing="false" prefHeight="40.0" maxWidth="Infinity" HBox.hgrow="ALWAYS" style="-fx-background-color: #1E1E1E;" text="Ver Detalhes do Plano" textFill="#e5a000">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
               <ImageView fitHeight="50.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/criar.png" />
               </ImageView>
               <Button fx:id="adicionarExercicioAoPlanoB" mnemonicParsing="false" prefHeight="40.0" maxWidth="Infinity" HBox.hgrow="ALWAYS" style="-fx-background-color: #1E1E1E;" text="Adicionar Exercício ao Plano" textFill="#e5a000">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
               <ImageView fitHeight="50.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <Image url="@images/excluir.png" />
               </ImageView>
               <Button fx:id="removerExercíciodoPlanoB" mnemonicParsing="false" prefHeight="40.0" maxWidth="Infinity" HBox.hgrow="ALWAYS" style="-fx-background-color: #1E1E1E;" text="Remover Exercício do Plano" textFill="#e5a000">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </HBox>
         </VBox>
         
         <Separator orientation="VERTICAL" />
      </VBox>
   </left>
   
   <top>
      <HBox alignment="CENTER_RIGHT" style="-fx-padding: 20;" BorderPane.alignment="CENTER">
         <StackPane>
            <ImageView fitHeight="80.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@images/sair.png" />
            </ImageView>
            <Button fx:id="sairB" mnemonicParsing="false" onAction="#handleSair" prefHeight="80.0" prefWidth="100.0" style="-fx-background-color: transparent;" />
         </StackPane>
      </HBox>
   </top>
</BorderPane>
